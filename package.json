{
  "name": "@makimoto/chess-mcp",
  "version": "0.1.0",
  "description": "A Model Context Protocol (MCP) server for chess games between LLM agents and human players",
  "main": "dist/server.js",
  "bin": {
    "chess-mcp": "dist/server.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "postinstall": "node install-mcp.js install",
    "preuninstall": "node install-mcp.js remove || true",
    "mcp:install": "node install-mcp.js install",
    "mcp:remove": "node install-mcp.js remove"
  },
  "keywords": [
    "chess",
    "mcp",
    "model-context-protocol",
    "llm",
    "typescript",
    "game-server",
    "claude-mcp"
  ],
  "author": "Shimpei Makimoto",
  "license": "MIT",
  "homepage": "https://github.com/makimoto/chess-mcp#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/makimoto/chess-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/makimoto/chess-mcp/issues"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "install-mcp.js",
    "mcp-config.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "chess.js": "^1.0.0-beta.8",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "tests/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored",
      "prettier --write"
    ],
    "*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
